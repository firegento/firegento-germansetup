<config>
    <modules>
        <FireGento_GermanSetup>
            <version>1.2.3</version>
        </FireGento_GermanSetup>
    </modules>
    <global>
        <blocks>
            <germansetup>
                <class>FireGento_GermanSetup_Block</class>
            </germansetup>
            <googleanalytics>
                <rewrite>
                    <ga>FireGento_GermanSetup_Block_Ga</ga>
                </rewrite>
            </googleanalytics>
        </blocks>
        <helpers>
            <germansetup>
                <class>FireGento_GermanSetup_Helper</class>
            </germansetup>
            <catalog>
                <rewrite>
                    <product_configuration>FireGento_GermanSetup_Helper_Catalog_Product_Configuration</product_configuration>
                </rewrite>
            </catalog>
            <checkout>
                <rewrite>
                    <data>FireGento_GermanSetup_Helper_Checkout_Data</data>
                </rewrite>
            </checkout>
        </helpers>
        <models>
            <germansetup>
                <class>FireGento_GermanSetup_Model</class>
                <resourceModel>germansetup_resource</resourceModel>
            </germansetup>
            <germansetup_resource>
                <class>FireGento_GermanSetup_Model_Resource</class>
                <entities>
                    <newsletter_subscriber_status>
                        <table>newsletter_subscriber_status</table>
                    </newsletter_subscriber_status>
                </entities>
            </germansetup_resource>
            <tax>
                <rewrite>
                    <config>FireGento_GermanSetup_Model_Tax_Config</config>
                </rewrite>
            </tax>
        </models>
        <resources>
            <germansetup_setup>
                <setup>
                    <module>FireGento_GermanSetup</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
            </germansetup_setup>
        </resources>
        <events>
            <catalog_product_save_before>
                <observers>
                    <germansetup_observer>
                        <class>germansetup/observer</class>
                        <type>model</type>
                        <method>autogenerateMetaInformation</method>
                    </germansetup_observer>
                </observers>
            </catalog_product_save_before>
            <newsletter_subscriber_save_after>
                <observers>
                    <germansetup_observer>
                        <class>germansetup/newsletter_observer</class>
                        <type>model</type>
                        <method>saveSubscriberStatusHistory</method>
                    </germansetup_observer>
                </observers>
            </newsletter_subscriber_save_after>
        </events>
    </global>
    <frontend>
        <secure_url>
            <contacts>/contacts/</contacts>
            <review>/review/</review>
        </secure_url>
        <layout>
            <updates>
                <germansetup>
                    <file>germansetup.xml</file>
                </germansetup>
            </updates>
        </layout>
        <translate>
            <modules>
                <FireGento_GermanSetup>
                    <files>
                        <germansetup>FireGento_GermanSetup.csv</germansetup>
                    </files>
                </FireGento_GermanSetup>
            </modules>
        </translate>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <germansetup_observer>
                        <class>germansetup/observer</class>
                        <type>model</type>
                        <method>filterAgreements</method>
                    </germansetup_observer>
                </observers>
            </core_block_abstract_to_html_before>
            <checkout_cart_update_items_after>
                <observers>
                    <recalculate_dynamic_shipping_tax>
                        <type>singleton</type>
                        <class>FireGento_GermanSetup_Model_Observer</class>
                        <method>recollectAfterQuoteItemUpdate</method>
                    </recalculate_dynamic_shipping_tax>
                </observers>
            </checkout_cart_update_items_after>
            <controller_action_predispatch_customer_account_createpost>
                <observers>
                    <germansetup_observer>
                        <class>germansetup/observer</class>
                        <type>model</type>
                        <method>customerCreatePreDispatch</method>
                    </germansetup_observer>
                </observers>
            </controller_action_predispatch_customer_account_createpost>
        </events>
        <routers>
            <germansetup>
                <use>standard</use>
                <args>
                    <module>FireGento_GermanSetup</module>
                    <frontName>germansetup</frontName>
                </args>
            </germansetup>
        </routers>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <germansetup>
                    <file>germansetup.xml</file>
                </germansetup>
            </updates>
        </layout>
        <translate>
            <modules>
                <FireGento_GermanSetup>
                    <files>
                        <germansetup>FireGento_GermanSetup.csv</germansetup>
                    </files>
                </FireGento_GermanSetup>
            </modules>
        </translate>
        <menu>
            <system>
                <children>
                    <germansetup translate="title">
                        <title>German Setup</title>
                        <sort_order>11</sort_order>
                        <children>
                            <setup>
                                <title>Setup</title>
                                <action>adminhtml/germansetup</action>
                                <sort_order>10</sort_order>
                            </setup>
                            <recommended_extensions>
                                <title>Recommended Extensions</title>
                                <action>adminhtml/germansetup/extensions</action>
                                <sort_order>15</sort_order>
                            </recommended_extensions>
                        </children>
                    </germansetup>
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <germansetup translate="title">
                                    <title>German Setup</title>
                                    <sort_order>11</sort_order>
                                </germansetup>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <events>
            <adminhtml_catalog_product_attribute_edit_prepare_form>
                <observers>
                    <germansetup_observer>
                        <class>germansetup/observer</class>
                        <type>model</type>
                        <method>addIsVisibleOnCheckoutOption</method>
                    </germansetup_observer>
                </observers>
            </adminhtml_catalog_product_attribute_edit_prepare_form>
            <adminhtml_block_html_before>
                <observers>
                    <germansetup_observer_agreement>
                        <class>germansetup/observer</class>
                        <type>model</type>
                        <method>addOptionsForAgreements</method>
                    </germansetup_observer_agreement>
                </observers>
            </adminhtml_block_html_before>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <FireGento_GermanSetup before="Mage_Adminhtml">FireGento_GermanSetup</FireGento_GermanSetup>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <catalog>
            <price>
                <display_block_below_price>1</display_block_below_price>
                <display_delivery_time_on_categories>1</display_delivery_time_on_categories>
                <show_tax_info>1</show_tax_info>
                <cms_page_shipping>lieferung</cms_page_shipping>
                <weight_unit>kg</weight_unit>
            </price>
        </catalog>
        <general>
            <imprint>
                <shop_name>Beispielshop</shop_name>
                <company_first>Musterfirma GmbH</company_first>
                <zip>12345</zip>
                <street>Musterstr. 1</street>
                <city>Musterstadt</city>
                <email>info@musterdomain.de</email>
            </imprint>
        </general>
        <checkout>
            <options>
                <additional_information><![CDATA[Beim Versand ins Nicht-EU-Ausland können zusätzlich Zölle, Steuern und Gebühren entstehen.]]></additional_information></options>
            <cart>
                <hide_shipping>1</hide_shipping>
            </cart>
        </checkout>
        <customer>
            <create_account>
                <avoid_tc>Yes</avoid_tc>
            </create_account>
            <address_templates>
                <text><![CDATA[
{{depend company}}{{var company}}
{{/depend}}{{depend prefix}}{{var prefix}} {{/depend}}{{var firstname}} {{depend middlename}}{{var middlename}} {{/depend}}{{var lastname}}{{depend suffix}} {{var suffix}}{{/depend}}
{{if street1}}{{var street1}}
{{/if}}{{depend street2}}{{var street2}}
{{/depend}}{{depend street3}}{{var street3}}
{{/depend}}{{depend street4}}{{var street4}}
{{/depend}}{{if postcode}}{{var postcode}} {{/if}}{{if city}}{{var city}}{{/if}}
{{var country}}
Tel: {{var telephone}}
{{depend fax}}Fax: {{var fax}}
{{/depend}}
                ]]></text>
                <oneline>
                    <![CDATA[{{depend prefix}}{{var prefix}} {{/depend}}{{var firstname}} {{depend middlename}}{{var middlename}} {{/depend}}{{var lastname}}{{depend suffix}} {{var suffix}}{{/depend}}, {{var street}}, {{var postcode}} {{var city}}, {{var country}}]]></oneline>
                <html><![CDATA[
{{depend company}}{{var company}}<br />{{/depend}}
{{depend prefix}}{{var prefix}} {{/depend}}{{var firstname}} {{depend middlename}}{{var middlename}} {{/depend}}{{var lastname}}{{depend suffix}} {{var suffix}}{{/depend}}<br/>
{{if street1}}{{var street1}}<br />{{/if}}
{{depend street2}}{{var street2}}<br />{{/depend}}
{{depend street3}}{{var street3}}<br />{{/depend}}
{{depend street4}}{{var street4}}<br />{{/depend}}
{{if postcode}}{{var postcode}} {{/if}}{{if city}}{{var city}}{{/if}}<br/>
{{var country}}<br/>
{{depend telephone}}Tel: {{var telephone}}{{/depend}}
{{depend fax}}<br/>Fax: {{var fax}}{{/depend}}
                ]]></html>
                <pdf><![CDATA[
{{depend company}}{{var company}}|{{/depend}}
{{depend prefix}}{{var prefix}} {{/depend}}{{var firstname}} {{depend middlename}}{{var middlename}} {{/depend}}{{var lastname}}{{depend suffix}} {{var suffix}}{{/depend}}|
{{if street1}}{{var street1}}|
{{/if}}
{{depend street2}}{{var street2}}|{{/depend}}
{{depend street3}}{{var street3}}|{{/depend}}
{{depend street4}}{{var street4}}|{{/depend}}
{{if postcode}}{{var postcode}} {{/if}}{{if city}}{{var city}}{{/if}}|
{{var country}}|
{{depend telephone}}Tel: {{var telephone}}{{/depend}}|
{{depend fax}}<br/>Fax: {{var fax}}{{/depend}}|
                ]]></pdf>
                <js_template template="title" module="customer">
                    <title>Javascript Template</title>
                    <defaultFormat>
                        <![CDATA[#{company}<br/>#{prefix} #{firstname} #{middlename} #{lastname} #{suffix}<br/>#{street0}<br/>#{street1}<br/>#{street2}<br/>#{street3}<br/>#{postcode} #{city}<br/>#{country_id}<br/>Tel: #{telephone}<br/>Fax: #{fax}]]>
                    </defaultFormat>
                </js_template>
            </address_templates>
        </customer>

        <url>
            <convert>
                <char0228>
                    <from>ä</from>
                    <to>ae</to>
                </char0228>
                <char0246>
                    <from>ö</from>
                    <to>oe</to>
                </char0246>
                <char0252>
                    <from>ü</from>
                    <to>ue</to>
                </char0252>
                <char0223>
                    <from>ß</from>
                    <to>ss</to>
                </char0223>
                <char0196>
                    <from>Ä</from>
                    <to>ae</to>
                </char0196>
                <char0214>
                    <from>Ö</from>
                    <to>oe</to>
                </char0214>
                <char0220>
                    <from>Ü</from>
                    <to>ue</to>
                </char0220>
            </convert>
        </url>

        <germansetup>
            <default_country>de</default_country>
        </germansetup>

    </default>
</config>
