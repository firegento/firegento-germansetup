 */

/**
 * Block for price info which is displayed comma-separated
 */
?>

<?php
    $texts = $this->getInfoTexts();
?>
<span class="price-info">
<?php
    $firstLoop = true;
    foreach($texts as $key => $text):
        if ($firstLoop): ?>
            <span class="<?php echo $key ?>"><?php echo ucfirst($text) ?></span><?php
        else:
            ?><span class="tax-separator">, </span><span class="<?php echo $key ?>"><?php echo $text ?></span><?php endif;
        $firstLoop = false;
    endforeach
?>
</span>